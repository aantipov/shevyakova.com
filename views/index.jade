						img(src=imgUrl + '#{type}/thumb_#{img}.jpg', width="640", heigh="480")
					.caption
						.descr
							p.title= info[lang]
							p= suffix
						.links
							a(href= "#{linkPrefix}/#{type}/#{img}", data-title="#{info[lang]} / #{suffix}")
								i.fa.fa-link
							a.lens(
							href=imgUrl + "#{type}/#{img}.jpg"
							data-title="<p class='text-center'><b>#{info[lang]}</b><span>#{suffix}</span></p>")
